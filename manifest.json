{
  "manifest_version": 2,
  "name": "FoxTrack Monitor",
  "version": "1.0",
  
  "applications": {
    "gecko": {
      "id": "foxtrack_monitor@mozilla.org"
    }
  },
  
  "permissions": ["http://*/*", "https://*/*", "tabs"],

  "browser_action": {
    "default_icon": "button/icons-ciber.png",
    "default_title": "FoxTrack Monitor",
    "default_popup": "popup/foxtrack_monitor.html"
  },

  "web_accessible_resources": [
    "assets/loading.gif"
  ]
}
